<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    android:elevation="2dp">

    <!-- 체리 아이콘 -->
    <ImageView
        android:id="@+id/cherryLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/cherry" />

    <!-- 그룹 이름 -->
    <TextView
        android:id="@+id/groupNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cherryLogo"
        android:layout_centerVertical="true"
        android:text="그룹 이름"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#6A5528" />

    <!-- 버튼을 감싸는 LinearLayout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/renameGroupButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="이름 변경"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#6A4228"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/enterGroupButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="입장하기"
            android:backgroundTint="#D73A3A"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>
